<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/backgroundLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/dim"/>

    <FrameLayout
        android:id="@+id/bottomSheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/templatePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_sheet_bg_dark">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/line"
                app:cardElevation="0dp"
                app:cardCornerRadius="1dp">
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/clipLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:visibility="invisible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/clipTypeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primaryText"
                            android:fontFamily="@font/bold"
                            android:textSize="14dp"
                            android:text="2019"/>
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">

                        <ImageView
                            android:id="@+id/clipIconImg"
                            android:layout_width="30dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/normal_rect_fill"
                            android:tint="@color/primaryText"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/clipText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textSize="14dp"
                                android:textColor="@color/secondaryText"
                                android:text="title"/>

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clipPasteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="5dp"
                        app:cornerRadius="0dp"
                        android:layout_marginRight="15dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:fontFamily="@font/bold_s"
                        android:text="@string/paste"/>

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>