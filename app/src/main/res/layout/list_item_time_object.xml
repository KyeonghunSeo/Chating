<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

   <FrameLayout
       android:id="@+id/frontLy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <FrameLayout
          android:id="@+id/iconArea"
          android:layout_width="48dp"
          android:layout_height="38dp">

         <ImageView
             android:id="@+id/iconImg"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:layout_marginLeft="21dp"
             android:layout_gravity="center_vertical"
             android:tint="@color/primaryText"/>

      </FrameLayout>

      <LinearLayout
          android:id="@+id/contentLy"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="48dp"
          android:layout_marginRight="@dimen/extra_margin">

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <TextView
                android:id="@+id/tagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:text="#love#peace"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/primaryText"
                android:text="title"/>

            <LinearLayout
                android:id="@+id/timeLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:id="@+id/timeImg"
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/outline_date_range_black_48dp"/>

               <TextView
                   android:id="@+id/timeText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="5"
                   android:text="메모" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarmLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/sharp_access_alarm_black_48dp"/>

               <TextView
                   android:id="@+id/alarmText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="alarm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repeatLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/repeat"/>

               <TextView
                   android:id="@+id/repeatText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="repeat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/outline_place_black_48dp"/>

               <TextView
                   android:id="@+id/locationText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="location" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/memoLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/sharp_notes_black_48dp"/>

               <TextView
                   android:id="@+id/memoText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="5"
                   android:text="메모" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageLy"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:foreground="@drawable/normal_rect_stroke"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                  <ImageView
                      android:id="@+id/mainImgView"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:scaleType="centerCrop"/>

                  <FrameLayout
                      android:id="@+id/subImageLy"
                      android:layout_width="100dp"
                      android:layout_height="100dp">

                     <ImageView
                         android:id="@+id/subImageView"
                         android:layout_width="100dp"
                         android:layout_height="100dp"
                         android:layout_marginLeft="1dp"
                         android:scaleType="centerCrop"/>

                     <TextView
                         android:id="@+id/subImageText"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:textColor="@color/white"
                         android:textSize="20dp"
                         android:background="@drawable/highlightcover"
                         android:text="+10"/>

                     <com.hellowo.journey.ui.view.base.Line
                         android:layout_width="1dp"
                         android:layout_height="match_parent"
                         app:colorFlag="secondary"/>

                  </FrameLayout>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/linkLy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/linkImg"
                      android:layout_width="100dp"
                      android:layout_height="60dp"
                      android:scaleType="centerCrop"/>

                  <TextView
                      android:id="@+id/linkText"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16dp"
                      android:lineSpacingExtra="2dp"
                      android:textColor="@color/primaryText"
                      android:ellipsize="end"
                      android:maxLines="20"
                      android:text="Title"/>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

         </LinearLayout>

      </LinearLayout>

   </FrameLayout>

</FrameLayout>