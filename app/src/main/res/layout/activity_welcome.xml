<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.ayaan.twelvepages.ui.view.LeafFallFrameLayout
        android:id="@+id/leafFallView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.ayaan.twelvepages.ui.view.LeafFallFrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="60dp">

        <TextView
            android:id="@+id/firstText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primaryText"
            android:textSize="16dp"
            android:text="@string/first_text_1"
            android:fontFamily="@font/bold"
            android:alpha="0"/>

        <TextView
            android:id="@+id/firstText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primaryText"
            android:textSize="16dp"
            android:text="@string/first_text_2"
            android:fontFamily="@font/bold"
            android:alpha="0" />

        <TextView
            android:id="@+id/firstText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/primaryText"
            android:textSize="16dp"
            android:text="@string/first_text_3"
            android:fontFamily="@font/bold"
            android:alpha="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        android:alpha="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:text="@string/logo_text"
            android:fontFamily="@font/thin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryText"
            android:textSize="24dp"
            android:text="C A L U A"
            android:fontFamily="@font/bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:text="Diary"
            android:fontFamily="@font/bold"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:src="@mipmap/ic_launcher"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="145dp"
            app:cornerRadius="21dp"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14dp"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:text="@string/sign_in_with_google"/>

        <ProgressBar
            android:id="@+id/loadingView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/primaryText"
            android:textSize="12dp"
            android:gravity="center"
            android:text="@string/init_loading_text"
            android:fontFamily="@font/thin"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/initSettingLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:alpha="0">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/optionTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/primaryText"
            android:textSize="18dp"
            android:text="@string/app_name"
            android:fontFamily="@font/regular"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <HorizontalScrollView
                android:id="@+id/diaryLy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:scrollbars="none">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingTop="70dp"
                    android:paddingBottom="70dp"
                    android:clipToPadding="false"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardElevation="30dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:id="@+id/diaryBtn0"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:textColor="@color/primaryText"
                                android:textSize="20dp"
                                android:text="@string/diary_set_0_title"
                                android:fontFamily="@font/bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="25dp"
                                android:textColor="@color/primaryText"
                                android:lineSpacingExtra="3dp"
                                android:textSize="12dp"
                                android:text="@string/diary_set_0_sub"
                                android:fontFamily="@font/regular"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/diarySelector0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/big_card_selector"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        app:cardElevation="30dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:id="@+id/diaryBtn1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:textColor="@color/primaryText"
                                android:textSize="20dp"
                                android:text="@string/diary_set_1_title"
                                android:fontFamily="@font/bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="25dp"
                                android:textColor="@color/primaryText"
                                android:lineSpacingExtra="3dp"
                                android:textSize="12dp"
                                android:text="@string/diary_set_1_sub"
                                android:fontFamily="@font/regular"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/diarySelector1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/big_card_selector"
                            android:visibility="gone"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        app:cardElevation="30dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:id="@+id/diaryBtn2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:textColor="@color/primaryText"
                                android:textSize="20dp"
                                android:text="@string/diary_set_2_title"
                                android:fontFamily="@font/bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="25dp"
                                android:textColor="@color/primaryText"
                                android:lineSpacingExtra="3dp"
                                android:textSize="12dp"
                                android:text="@string/diary_set_2_sub"
                                android:fontFamily="@font/regular"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/diarySelector2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/big_card_selector"
                            android:visibility="gone"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        app:cardElevation="30dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:id="@+id/diaryBtn3"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:textColor="@color/primaryText"
                                android:textSize="20dp"
                                android:text="@string/diary_set_3_title"
                                android:fontFamily="@font/bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="25dp"
                                android:textColor="@color/primaryText"
                                android:lineSpacingExtra="3dp"
                                android:textSize="12dp"
                                android:text="@string/diary_set_3_sub"
                                android:fontFamily="@font/regular"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/diarySelector3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/big_card_selector"
                            android:visibility="gone"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/calendarOptionLy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:clipToPadding="false"
                android:visibility="gone">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.google.android.material.button.MaterialButton
                       android:id="@+id/osCalendarBtn"
                       android:layout_width="match_parent"
                       android:layout_height="44dp"
                       app:cornerRadius="19dp"
                       style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                       android:background="?android:attr/selectableItemBackground"
                       android:textSize="12dp"
                       android:gravity="center"
                       android:textColor="@color/secondaryText"
                       android:fontFamily="@font/bold"
                       android:text="@string/reference_os_calendar"/>

                   <TextView
                       android:id="@+id/osCalendarText"
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:layout_marginTop="20dp"
                       android:textColor="@color/disableText"
                       android:lineSpacingExtra="3dp"
                       android:textSize="14dp"
                       android:fontFamily="@font/regular"
                       android:text="@string/no_reference"/>

               </LinearLayout>

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"
                android:textSize="10dp"
                android:textColor="@color/line"
                android:text="@string/init_setting_info"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center_vertical|right"
                android:clipToPadding="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/prevBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    app:cornerRadius="19dp"
                    android:layout_marginRight="10dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:background="?android:attr/selectableItemBackground"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold"
                    android:text="@string/cancel"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    app:cornerRadius="19dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="@string/confirm"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
