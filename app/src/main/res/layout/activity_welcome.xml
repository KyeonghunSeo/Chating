<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="60dp">

        <TextView
            android:id="@+id/firstText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primaryText"
            android:textSize="20dp"
            android:text="@string/first_text_1"
            android:fontFamily="@font/regular_s"
            android:alpha="0"/>

        <TextView
            android:id="@+id/firstText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/primaryText"
            android:textSize="20dp"
            android:text="@string/first_text_2"
            android:fontFamily="@font/regular_s"
            android:alpha="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="60dp"
        android:alpha="0">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textColor="@color/secondaryText"
            android:textSize="18dp"
            android:text="@string/logo_text"
            android:fontFamily="@font/regular_s"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="120dp"
            android:textColor="@color/primaryText"
            android:textSize="22dp"
            android:text="@string/app_name"
            android:fontFamily="@font/bold_s"/>

        <LinearLayout
            android:id="@+id/loginBtn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/primary_rect_stroke_1dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google_icon"
                android:padding="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="16dp"
                android:fontFamily="@font/regular_s"
                android:text="@string/sign_in_with_google"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/initSettingLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/optionTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:textColor="@color/primaryText"
            android:textSize="22dp"
            android:text="@string/app_name"
            android:fontFamily="@font/bold_s"/>

        <LinearLayout
            android:id="@+id/optionsLy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="40dp">

            <TextView
                android:id="@+id/option1Text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/secondaryText"
                android:textSize="18dp"
                android:text="options"
                android:fontFamily="@font/regular_s"/>

            <TextView
                android:id="@+id/option2Text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/secondaryText"
                android:textSize="18dp"
                android:text="options"
                android:fontFamily="@font/regular_s"/>

            <TextView
                android:id="@+id/option3Text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/secondaryText"
                android:textSize="18dp"
                android:text="options"
                android:fontFamily="@font/regular_s"/>

            <TextView
                android:id="@+id/option4Text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/secondaryText"
                android:textSize="18dp"
                android:text="options"
                android:fontFamily="@font/regular_s"/>

            <TextView
                android:id="@+id/option5Text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/secondaryText"
                android:textSize="18dp"
                android:text="options"
                android:fontFamily="@font/regular_s"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/prevBtn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/disableText"
                android:textSize="18dp"
                android:text="@string/prev"
                android:fontFamily="@font/bold_s"/>

            <TextView
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:text="@string/confirm"
                android:fontFamily="@font/bold_s"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
