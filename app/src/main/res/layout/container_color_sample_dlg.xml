<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/coverLy"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/coverImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/packLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg0" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg1" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg2" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg3" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg4" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg5" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg6" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg7" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg8" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="1dp"
                android:id="@+id/colorImg9" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>