<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_margin"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/bold"
            android:text="@string/type"
            android:textSize="18dp"/>

        <com.hellowo.chating.calendar.view.TypePickerView
            android:id="@+id/typePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:clipToPadding="false">
        </com.hellowo.chating.calendar.view.TypePickerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_margin"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/bold"
            android:text="@string/style"
            android:textSize="18dp"/>

        <com.hellowo.chating.calendar.view.StylePickerView
            android:id="@+id/stylePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:clipToPadding="false">
        </com.hellowo.chating.calendar.view.StylePickerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_margin"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/bold"
            android:text="@string/color"
            android:textSize="18dp"/>

        <com.hellowo.chating.calendar.view.ColorPickerView
            android:id="@+id/colorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:clipToPadding="false">
        </com.hellowo.chating.calendar.view.ColorPickerView>

    </LinearLayout>
</FrameLayout>
