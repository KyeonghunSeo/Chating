<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:textSize="12dp"
                        android:text="name"
                        android:fontFamily="@font/regular"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/premiumTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/disableText">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/crown"
                            android:tint="@color/white"
                            android:padding="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_marginRight="3dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:text="@string/premium"
                            android:fontFamily="@font/bold"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryText"
                    android:textSize="12dp"
                    android:text="email"/>

            </LinearLayout>

            <com.ayaan.twelvepages.ui.view.base.Line
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:colorFlag="secondary"/>

            <TextView
                android:id="@+id/mottoText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:maxLines="5"
                android:ellipsize="end"
                android:textSize="12dp"
                android:hint="@string/motto"
                android:text="@string/motto_sample"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/aboutUsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_launcher_foreground"
            android:tint="@color/secondaryText"/>

        <ImageView
            android:id="@+id/settingsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/setting"
            android:tint="@color/secondaryText"/>

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/search"
            android:tint="@color/secondaryText"/>

    </LinearLayout>

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|right"
        android:textColor="@color/disableText"
        android:textSize="12dp"
        android:text="버전 1.0 (최신)"
        android:fontFamily="@font/bold"/>

</FrameLayout>