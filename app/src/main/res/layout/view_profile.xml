<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dim"
                        android:padding="10dp"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/nameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/background"
                            android:textSize="12dp"
                            android:text="name"
                            android:fontFamily="@font/bold"/>

                        <TextView
                            android:id="@+id/emailText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/background"
                            android:textSize="10dp"
                            android:text="email"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/mottoText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:maxLines="10"
                android:ellipsize="end"
                android:textSize="14dp"
                android:hint="@string/motto"
                android:text="@string/motto_sample"
                android:background="?android:attr/selectableItemBackground"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/totalRecordsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/total_records"
                        android:textColor="@color/primaryText"
                        android:textSize="14dp"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutUsBtn"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="20dp"
            android:text="C A L U A"
            android:fontFamily="@font/bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/primaryText"
            android:textSize="10dp"
            android:text="Diary"
            android:fontFamily="@font/bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/premiumTag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/yellow">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/crown"
                    android:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="@string/premium"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/settingsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/setting"
            android:tint="@color/primaryText"/>

    </LinearLayout>

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|right"
        android:textColor="@color/disableText"
        android:textSize="12dp"
        android:text="버전 1.0 (최신)"
        android:fontFamily="@font/bold"/>

</FrameLayout>