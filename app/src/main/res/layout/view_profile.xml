<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:paddingBottom="20dp"
        android:layout_gravity="right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginRight="100dp"
                android:gravity="bottom">

                <androidx.cardview.widget.CardView
                    android:id="@+id/premiumTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="right"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/disableText">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/crown"
                        android:tint="@color/white"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="8dp"
                        android:text="@string/premium"
                        android:fontFamily="@font/avenir_black"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/primaryText"
                    android:textSize="12dp"
                    android:text="name"
                    android:fontFamily="@font/regular"/>

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/primaryText"
                    android:textSize="12dp"
                    android:text="email"
                    android:fontFamily="@font/avenir_medium"/>

            </LinearLayout>

            <com.hellowo.journey.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                app:colorFlag="primary"/>

            <TextView
                android:id="@+id/mottoText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/primaryText"
                android:gravity="right"
                android:textSize="14dp"
                android:hint="@string/motto"
                android:text="@string/motto_sample"
                android:background="?android:attr/selectableItemBackground"/>

            <com.hellowo.journey.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:colorFlag="primary"/>

            <TextView
                android:id="@+id/premiumBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|right"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/premium"
                android:fontFamily="@font/avenir_black"/>

            <TextView
                android:id="@+id/settingsBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|right"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/setting"
                android:fontFamily="@font/avenir_black"/>

            <TextView
                android:id="@+id/aboutUsBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|right"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/about_us"
                android:fontFamily="@font/avenir_black"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:id="@+id/calendarBtn"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/calendarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primaryText"
                    android:textSize="18dp"
                    android:text="@string/calendar"
                    android:fontFamily="@font/avenir_black"/>

                <View
                    android:id="@+id/calendarBar"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/primaryText"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inboxBtn"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/inboxText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/disableText"
                    android:textSize="18dp"
                    android:text="@string/inbox"
                    android:fontFamily="@font/avenir_black"/>

                <View
                    android:id="@+id/inboxBar"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/primaryText"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/search"
            android:padding="13dp"
            android:tint="@color/iconTint"/>

    </FrameLayout>

</FrameLayout>