                android:padding="15dp"
                android:src="@drawable/normal_rect_fill"
                android:tint="@color/primaryText"/>

            <ImageView
                android:id="@+id/colorBtn6"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:padding="15dp"
                android:src="@drawable/normal_rect_fill"
                android:tint="@color/primaryText"/>

            <ImageView
                android:id="@+id/colorBtn7"
                android:layout_width="70dp"
