<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contentLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:background="@drawable/popup_dialog_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/disableText"
            android:hint="@string/set_alarm"
            android:fontFamily="@font/bold"
            android:text=""/>

        <com.hellowo.journey.ui.view.AlarmPickerView
            android:id="@+id/alarmPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.hellowo.journey.ui.view.AlarmPickerView>

        <com.hellowo.journey.ui.view.base.Line
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            app:colorFlag="disable"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/regular"
                android:text="@string/delete"/>

            <com.hellowo.journey.ui.view.base.Line
                android:layout_width="1dp"
                android:layout_height="match_parent"
                app:colorFlag="disable"/>

            <TextView
                android:id="@+id/confirmBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:text="@string/confirm"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>