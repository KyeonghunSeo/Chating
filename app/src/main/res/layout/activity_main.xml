<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <com.hellowo.journey.ui.view.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.ProfileView>

    <com.hellowo.journey.ui.view.InboxView
        android:id="@+id/inboxView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="29dp">
    </com.hellowo.journey.ui.view.InboxView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="20dp">

            <LinearLayout
                android:id="@+id/mainDateLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:animateLayoutChanges="true"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/primaryText"
                    android:textSize="22dp"
                    android:fontFamily="@font/avenir_black"
                    android:text="JUNE"/>

                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/primaryText"
                    android:textSize="22dp"
                    android:fontFamily="@font/avenir_black"
                    android:text="2019"/>

            </LinearLayout>

        </FrameLayout>

        <com.hellowo.journey.ui.view.CalendarPagerView
            android:id="@+id/calendarPagerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">
        </com.hellowo.journey.ui.view.CalendarPagerView>

        <View
            android:id="@+id/topShadow"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/line_top_shadow"/>

        <com.hellowo.journey.ui.view.DayPagerView
            android:id="@+id/dayPagerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.hellowo.journey.ui.view.DayPagerView>

        <com.hellowo.journey.ui.view.BriefingView
            android:id="@+id/briefingView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            android:layout_gravity="bottom|center_horizontal">
        </com.hellowo.journey.ui.view.BriefingView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_shadow_background"/>

        <ImageView
            android:id="@+id/todayFlag"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:elevation="20dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <com.hellowo.journey.ui.view.TemplateControlView
        android:id="@+id/templateControlView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp">
    </com.hellowo.journey.ui.view.TemplateControlView>

    <ImageView
        android:id="@+id/profileBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_gravity="right"
        android:scaleType="centerCrop"/>

    <com.hellowo.journey.ui.view.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </com.hellowo.journey.ui.view.SearchView>

</FrameLayout>