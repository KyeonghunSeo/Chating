<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/dateLy"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/menuBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_outline_account_circle"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/monthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/bold"
                android:textSize="20dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/searchView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@drawable/ic_outline_search"
                android:tint="@color/iconTint"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <com.hellowo.chating.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">
    </com.hellowo.chating.calendar.view.CalendarView>

    <View
        android:id="@+id/topShadow"
        android:background="@drawable/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="50dp">
    </View>

    <com.hellowo.chating.calendar.view.DayView
        android:id="@+id/dayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.hellowo.chating.calendar.view.DayView>

    <View
        android:background="@color/grey"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp">
    </View>

    <com.hellowo.chating.calendar.view.KeepView
        android:id="@+id/keepView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_all_inbox_24px"
            android:tint="@color/iconTint"/>

    </com.hellowo.chating.calendar.view.KeepView>

    <com.hellowo.chating.calendar.view.BriefingView
        android:id="@+id/briefingView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">
    </com.hellowo.chating.calendar.view.BriefingView>

    <View
        android:id="@+id/dimView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/transitionDim">
    </View>

    <com.hellowo.chating.calendar.view.TimeObjectDetailView
        android:id="@+id/timeObjectDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp">
    </com.hellowo.chating.calendar.view.TimeObjectDetailView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>