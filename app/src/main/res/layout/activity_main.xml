<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/thin"
            android:text="@string/calendar_settings"
            android:layout_margin="@dimen/big_margin"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/calendarLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:id="@+id/dateLy"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/yearText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/primaryText"
                        android:textSize="18dp"
                        android:text="2018"/>

                    <com.hellowo.journey.ui.view.base.Line
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/monthText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/primaryText"
                        android:textSize="16dp"
                        android:text="10ì›”"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/todayBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right|bottom">

                <TextView
                    android:id="@+id/todayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/digit_bold"
                    android:textSize="10dp"
                    android:text="Today"/>

            </FrameLayout>

            <com.hellowo.journey.ui.view.base.Line
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom">

            <com.hellowo.journey.ui.view.base.Line
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/keepBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_inbox_black_48dp"
                    android:padding="15dp"/>

                <ImageView
                    android:id="@+id/searchBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_search_black_48dp"
                    android:padding="15dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/goalBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_flag_black_48dp"
                    android:padding="15dp"/>

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_perm_identity_black_48dp"
                    android:padding="16dp"/>

            </LinearLayout>

        </FrameLayout>

        <com.hellowo.journey.ui.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp">
        </com.hellowo.journey.ui.view.CalendarView>

        <View
            android:id="@+id/dimView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/transitionDim">
        </View>

        <com.hellowo.journey.ui.view.KeepView
            android:id="@+id/keepView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:visibility="visible">

        </com.hellowo.journey.ui.view.KeepView>

        <com.hellowo.journey.ui.view.BriefingView
            android:id="@+id/briefingView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone">
        </com.hellowo.journey.ui.view.BriefingView>

        <com.hellowo.journey.ui.view.TemplateControlView
            android:id="@+id/templateSelectView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.hellowo.journey.ui.view.TemplateControlView>

        <com.hellowo.journey.ui.view.SearchView
            android:id="@+id/searchView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:visibility="gone">
        </com.hellowo.journey.ui.view.SearchView>

        <com.hellowo.journey.ui.view.TimeObjectDetailView
            android:id="@+id/timeObjectDetailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.hellowo.journey.ui.view.TimeObjectDetailView>

    </FrameLayout>

</FrameLayout>