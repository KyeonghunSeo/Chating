<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hellowo.journey.ui.view.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.ProfileView>

    <com.hellowo.journey.ui.view.InboxView
        android:id="@+id/inboxView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="29dp">
    </com.hellowo.journey.ui.view.InboxView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="30dp">

        <FrameLayout
            android:id="@+id/calendarLy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/headerLy"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:elevation="20dp">

                <LinearLayout
                    android:id="@+id/mainDateLy"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:animateLayoutChanges="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/monthText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/primaryText"
                        android:textSize="20dp"
                        android:fontFamily="@font/avenir_black"
                        android:text="JUNE"/>

                    <TextView
                        android:id="@+id/yearText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/primaryText"
                        android:textSize="20dp"
                        android:fontFamily="@font/avenir_black"
                        android:text="2019"/>

                </LinearLayout>

            </FrameLayout>

            <com.hellowo.journey.ui.view.CalendarPagerView
                android:id="@+id/calendarPagerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp">
            </com.hellowo.journey.ui.view.CalendarPagerView>

            <View
                android:id="@+id/topShadow"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/line_top_shadow"/>

            <com.hellowo.journey.ui.view.DayPagerView
                android:id="@+id/dayPagerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </com.hellowo.journey.ui.view.DayPagerView>

            <ImageView
                android:id="@+id/todayFlag"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/todayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="center_horizontal|bottom"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:id="@+id/todayLeftArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/arrow_left"
                            android:tint="@color/primaryText"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/todayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/primaryText"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/avenir_black"
                            android:text="@string/today"/>

                        <ImageView
                            android:id="@+id/todayRightArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/arrow_right"
                            android:tint="@color/primaryText"
                            android:layout_gravity="center_vertical|right" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/folderBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="-35dp"
            android:layout_marginBottom="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/templateIconImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/arrow_right"
                android:tint="@color/white"/>

        </androidx.cardview.widget.CardView>

        <com.hellowo.journey.ui.view.TemplateControlView
            android:id="@+id/templateControlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.hellowo.journey.ui.view.TemplateControlView>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/profileBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:elevation="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <com.hellowo.journey.ui.view.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        android:visibility="gone">
    </com.hellowo.journey.ui.view.SearchView>

</FrameLayout>