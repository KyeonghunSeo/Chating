<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/calendarLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/topMenu"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/primaryText"
                    android:textSize="18dp"
                    android:fontFamily="@font/bold"
                    android:text="10ì›”"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/profileBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|right"
                android:padding="15dp"
                android:src="@drawable/outline_menu_black_48dp"
                android:tint="@color/iconTint"
                android:background="?android:attr/selectableItemBackground"/>

        </FrameLayout>

        <com.hellowo.journey.ui.view.CalendarPagerView
            android:id="@+id/calendarPagerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">
        </com.hellowo.journey.ui.view.CalendarPagerView>

        <com.hellowo.journey.ui.view.DayPagerView
            android:id="@+id/dayPagerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.hellowo.journey.ui.view.DayPagerView>

        <com.hellowo.journey.ui.view.base.Line
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom"
            app:colorFlag="disable"/>

        <com.hellowo.journey.ui.view.BriefingView
            android:id="@+id/briefingView"
            android:layout_gravity="bottom"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:visibility="gone">
        </com.hellowo.journey.ui.view.BriefingView>

        <ImageView
            android:id="@+id/keepBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:padding="15dp"
            android:src="@drawable/outline_inbox_black_48dp"
            android:tint="@color/iconTint"
            android:background="?android:attr/selectableItemBackground"/>

    </FrameLayout>

    <com.hellowo.journey.ui.view.KeepView
        android:id="@+id/keepView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
    </com.hellowo.journey.ui.view.KeepView>

    <com.hellowo.journey.ui.view.TemplateControlView
        android:id="@+id/templateControlView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.TemplateControlView>

    <com.hellowo.journey.ui.view.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </com.hellowo.journey.ui.view.SearchView>

    <com.hellowo.journey.ui.view.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.ProfileView>

    <com.hellowo.journey.ui.view.TimeObjectDetailView
        android:id="@+id/timeObjectDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">
    </com.hellowo.journey.ui.view.TimeObjectDetailView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"/>

</FrameLayout>