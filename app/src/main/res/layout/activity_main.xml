<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/dateLy"
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/monthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/futura_regular"
                android:textSize="25dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/menuBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/profileImage"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/ic_outline_account_circle"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/searchView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@drawable/ic_outline_search"
                android:tint="@color/iconTint"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <com.hellowo.journey.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">
    </com.hellowo.journey.calendar.view.CalendarView>

    <View
        android:id="@+id/topShadow"
        android:background="@drawable/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="50dp">
    </View>

    <com.hellowo.journey.calendar.view.DayView
        android:id="@+id/dayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.hellowo.journey.calendar.view.DayView>

    <View
        android:background="@drawable/bottom_shadow"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp">
    </View>

    <com.hellowo.journey.calendar.view.KeepView
        android:id="@+id/keepView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_all_inbox_24px"
            android:tint="@color/iconTint"/>

    </com.hellowo.journey.calendar.view.KeepView>

    <com.hellowo.journey.calendar.view.BriefingView
        android:id="@+id/briefingView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">
    </com.hellowo.journey.calendar.view.BriefingView>

    <androidx.cardview.widget.CardView
        android:id="@+id/controlPanel"
        android:animateLayoutChanges="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="13dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <com.hellowo.journey.calendar.view.TemplateControlPager
            android:id="@+id/templateControlPager"
            android:layout_width="100dp"
            android:layout_height="match_parent">
        </com.hellowo.journey.calendar.view.TemplateControlPager>

    </androidx.cardview.widget.CardView>

    <com.hellowo.journey.calendar.view.TemplateControlPagerIndicator
        android:id="@+id/templateControlPagerIndi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="2dp">
    </com.hellowo.journey.calendar.view.TemplateControlPagerIndicator>

    <View
        android:id="@+id/dimView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/transitionDim">
    </View>

    <com.hellowo.journey.calendar.view.TimeObjectDetailView
        android:id="@+id/timeObjectDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp">
    </com.hellowo.journey.calendar.view.TimeObjectDetailView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>