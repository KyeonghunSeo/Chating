<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/thin"
            android:text="@string/calendar_settings"
            android:layout_margin="@dimen/big_margin"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/calendarLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:id="@+id/dateLy"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/secondaryText"
                    android:rotation="90"
                    android:textSize="11dp"
                    android:text="2018"/>

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-4dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/primaryText"
                    android:textSize="32dp"
                    android:text="10ì›”"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:tint="@color/iconTint"
                android:src="@drawable/sharp_perm_identity_black_48dp"
                android:padding="10dp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:visibility="gone">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/searchBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="@color/iconTint"
                    android:src="@drawable/sharp_search_black_48dp"
                    android:padding="15dp"/>

            </LinearLayout>

        </FrameLayout>

        <com.hellowo.journey.ui.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp">
        </com.hellowo.journey.ui.view.CalendarView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal">

            <ImageView
                android:id="@+id/prevBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/iconTint"
                android:src="@drawable/sharp_navigate_before_black_48dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="15dp"/>

            <FrameLayout
                android:id="@+id/todayBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/todayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/primaryText"
                    android:textSize="10dp"
                    android:text="Today"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/iconTint"
                android:src="@drawable/sharp_navigate_next_black_48dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="15dp"/>

        </LinearLayout>

        <com.hellowo.journey.ui.view.KeepView
            android:id="@+id/keepView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            app:cardElevation="10dp"
            app:cardCornerRadius="0dp">
        </com.hellowo.journey.ui.view.KeepView>

        <com.hellowo.journey.ui.view.BriefingView
            android:id="@+id/briefingView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone">
        </com.hellowo.journey.ui.view.BriefingView>

        <com.hellowo.journey.ui.view.TemplateControlView
            android:id="@+id/templateControlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">
        </com.hellowo.journey.ui.view.TemplateControlView>

    </FrameLayout>

    <com.hellowo.journey.ui.view.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center">
    </com.hellowo.journey.ui.view.SearchView>

    <com.hellowo.journey.ui.view.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.ProfileView>

    <com.hellowo.journey.ui.view.TimeObjectDetailView
        android:id="@+id/timeObjectDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.TimeObjectDetailView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"/>

</FrameLayout>