<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/thin"
            android:text="@string/calendar_settings"
            android:layout_margin="@dimen/big_margin"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/calendarLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/dateLy"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/regular"
                    android:textSize="16dp"
                    android:text="2018년 10월"/>

            </LinearLayout>

        </FrameLayout>

        <com.hellowo.journey.ui.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">
        </com.hellowo.journey.ui.view.CalendarView>

        <View
            android:id="@+id/topShadow"
            android:background="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="50dp">
        </View>

        <View
            android:id="@+id/bottomShadow"
            android:background="@color/secondaryText"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="49dp"
            android:layout_gravity="bottom">
        </View>

        <View
            android:id="@+id/dimView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/transitionDim">
        </View>

        <com.hellowo.journey.ui.view.KeepView
            android:id="@+id/keepView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp"
            android:visibility="visible">

        </com.hellowo.journey.ui.view.KeepView>

        <com.hellowo.journey.ui.view.BriefingView
            android:id="@+id/briefingView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            android:visibility="gone">
        </com.hellowo.journey.ui.view.BriefingView>

        <ImageView
            android:id="@+id/keepBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:tint="@color/primaryText"
            android:src="@drawable/layers"
            android:padding="12dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/profileImage"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:tint="@color/primaryText"
            android:src="@drawable/user"/>

        <com.hellowo.journey.ui.view.SearchView
            android:id="@+id/searchView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right">
        </com.hellowo.journey.ui.view.SearchView>

        <com.hellowo.journey.ui.view.TemplateControlView
            android:id="@+id/templateControlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.hellowo.journey.ui.view.TimeObjectDetailView
            android:id="@+id/timeObjectDetailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.hellowo.journey.ui.view.TimeObjectDetailView>

    </FrameLayout>

</FrameLayout>