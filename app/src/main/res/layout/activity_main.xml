<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.hellowo.chating.calendar.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp">
    </com.hellowo.chating.calendar.CalendarView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/dateLy"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menuBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_outline_account_circle"
                        android:tint="@color/iconTint"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="20dp"
                layout="@layout/view_day_of_week" />

        </LinearLayout>

    </FrameLayout>

    <com.hellowo.chating.calendar.DayView
        android:id="@+id/dayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.hellowo.chating.calendar.DayView>

    <com.hellowo.chating.calendar.BriefingView
        android:id="@+id/briefingView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="11dp"
            android:src="@drawable/ic_outline_calendar_today"
            android:tint="@color/iconTint"/>

    </com.hellowo.chating.calendar.BriefingView>

    <com.hellowo.chating.calendar.KeepView
        android:id="@+id/keepView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_outline_all_inbox"
            android:tint="@color/iconTint"/>

    </com.hellowo.chating.calendar.KeepView>

    <androidx.cardview.widget.CardView
        android:id="@+id/insertBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/iconTint"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            android:src="@drawable/ic_outline_create"
            android:tint="@color/white"/>

    </androidx.cardview.widget.CardView>

    <com.hellowo.chating.calendar.EditorView
        android:id="@+id/editorView"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">
    </com.hellowo.chating.calendar.EditorView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"/>

</FrameLayout>