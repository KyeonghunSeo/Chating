<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/calendarLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <LinearLayout
                android:id="@+id/topMenu"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/primaryText"
                    android:textSize="18dp"
                    android:fontFamily="@font/bold"
                    android:text="10ì›”"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="15dp"
                android:foreground="@drawable/primary_rect_stroke_1dp">

                <ImageView
                    android:id="@+id/profileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </FrameLayout>

        </FrameLayout>

        <com.hellowo.journey.ui.view.CalendarPagerView
            android:id="@+id/calendarPagerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="58dp">
        </com.hellowo.journey.ui.view.CalendarPagerView>

        <com.hellowo.journey.ui.view.DayPagerView
            android:id="@+id/dayPagerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.hellowo.journey.ui.view.DayPagerView>

        <com.hellowo.journey.ui.view.BriefingView
            android:id="@+id/briefingView"
            android:layout_gravity="bottom"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:elevation="8dp">
        </com.hellowo.journey.ui.view.BriefingView>

        <FrameLayout
            android:id="@+id/keepBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom"
            android:elevation="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:foreground="@drawable/normal_rect_stroke"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/keepBtnImg"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/sharp_bookmark_border_black_48dp"
                        android:tint="@color/disableText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/secondaryText"
                        android:textSize="10dp"
                        android:text="Today"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </FrameLayout>

    <com.hellowo.journey.ui.view.KeepView
        android:id="@+id/keepView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
    </com.hellowo.journey.ui.view.KeepView>

    <com.hellowo.journey.ui.view.TemplateControlView
        android:id="@+id/templateControlView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.TemplateControlView>

    <com.hellowo.journey.ui.view.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </com.hellowo.journey.ui.view.SearchView>

    <com.hellowo.journey.ui.view.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.hellowo.journey.ui.view.ProfileView>

    <com.hellowo.journey.ui.view.TimeObjectDetailView
        android:id="@+id/timeObjectDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">
    </com.hellowo.journey.ui.view.TimeObjectDetailView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"/>

</FrameLayout>