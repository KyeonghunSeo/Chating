<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ayaan.twelvepages.ui.view.ProfileView
        android:id="@+id/profileView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.ayaan.twelvepages.ui.view.ProfileView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineSpotShadowColor="@color/secondaryText"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="0dp"
        app:cardElevation="30dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/folderListView"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="-40dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@color/disableText">
        </androidx.recyclerview.widget.RecyclerView>

        <FrameLayout
            android:id="@+id/contentLy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/calendarLy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:visibility="invisible">

                <FrameLayout
                    android:id="@+id/headerLy"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:elevation="20dp"
                    android:clipChildren="false">

                    <LinearLayout
                        android:id="@+id/mainDateLy"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="18dp"
                        android:animateLayoutChanges="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:clipChildren="false">

                        <TextView
                            android:id="@+id/mainMonthText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/mainYearText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/thin"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="60dp">

                        <FrameLayout
                            android:id="@+id/countdownBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_gravity="right">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/countdownCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0.5dp"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:id="@+id/countdownImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/countdown"
                                    android:tint="@color/primaryText"
                                    android:alpha="0.5"
                                    android:padding="5dp"/>

                                <TextView
                                    android:id="@+id/countdownText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="2dp"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:textColor="@color/primaryText"
                                    android:textSize="6dp" />

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/undoneBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_gravity="right">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/undoneCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardElevation="0.5dp"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:id="@+id/undoneImg"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/check"
                                    android:tint="@color/primaryText"
                                    android:padding="5dp"/>

                                <TextView
                                    android:id="@+id/undoneText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="26dp"
                                    android:layout_marginRight="6dp"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:textColor="@color/primaryText"
                                    android:textSize="10dp"
                                    android:visibility="gone"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/undoneBadge"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="right"
                                android:layout_margin="5dp"
                                app:cardBackgroundColor="@color/red"
                                app:cardElevation="0.5dp"
                                app:cardCornerRadius="7dp">

                                <TextView
                                    android:id="@+id/undoneBadgeText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textColor="@color/background"
                                    android:textSize="10dp"/>

                            </androidx.cardview.widget.CardView>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dowLy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.dp"
                        android:layout_marginRight="13.dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dowText0"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>

                        <TextView
                            android:id="@+id/dowText1"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>

                        <TextView
                            android:id="@+id/dowText2"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>

                        <TextView
                            android:id="@+id/dowText3"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>

                        <TextView
                            android:id="@+id/dowText4"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>

                        <TextView
                            android:id="@+id/dowText5"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>

                        <TextView
                            android:id="@+id/dowText6"
                            android:text="S"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.5dp"
                            android:textSize="11dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"/>
                    </LinearLayout>

                </FrameLayout>

                <com.ayaan.twelvepages.ui.view.CalendarPager
                    android:id="@+id/calendarPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.ayaan.twelvepages.ui.view.CalendarPager>

                <View
                    android:id="@+id/topShadow"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/line_top_shadow"/>

                <com.ayaan.twelvepages.ui.view.DayPager
                    android:id="@+id/dayPager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.ayaan.twelvepages.ui.view.DayPager>

            </FrameLayout>

            <com.ayaan.twelvepages.ui.view.NoteView
                android:id="@+id/noteView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
            </com.ayaan.twelvepages.ui.view.NoteView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/todayBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|bottom">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="15dp"
                android:outlineSpotShadowColor="@color/secondaryText"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/background"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:id="@+id/todayLeftArrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/arrow_left"
                        android:tint="@color/primaryText"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/todayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/primaryText"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/bold"
                        android:text="@string/today_c"/>

                    <ImageView
                        android:id="@+id/todayRightArrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/arrow_right"
                        android:tint="@color/primaryText"
                        android:layout_gravity="center_vertical|right" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/folderBtn"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-40dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:outlineSpotShadowColor="@color/secondaryText"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/folderArrowImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/arrow_right"
                    android:tint="@color/primaryText"/>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/clipView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:outlineSpotShadowColor="@color/secondaryText"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp"
            android:visibility="invisible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/clipTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:text="title"/>

                <ImageView
                    android:id="@+id/clipCloseBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/close"
                    android:tint="@color/secondaryText"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/clipIconImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/circle_fill"
                    android:tint="@color/primaryText"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/clipText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="16dp"
                        android:textColor="@color/primaryText"
                        android:text="title"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/clipPasteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/normal_rect_stroke"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textSize="14dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/regular"
                    android:text="@string/paste"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/profileBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:elevation="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardElevation="0.5dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <com.ayaan.twelvepages.ui.view.TemplateView
        android:id="@+id/templateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp">
    </com.ayaan.twelvepages.ui.view.TemplateView>

    <com.ayaan.twelvepages.ui.view.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        android:visibility="gone">
    </com.ayaan.twelvepages.ui.view.SearchView>

</FrameLayout>