<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLy">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"/>

        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/more"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"/>

    </FrameLayout>

    <View
        android:id="@+id/topShadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/line_top_shadow"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <com.ayaan.twelvepages.ui.view.base.AutoScaleEditText
                    android:id="@+id/titleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColorHint="@color/disableText"
                    android:fontFamily="@font/regular"
                    android:textSize="40dp"
                    android:hint="@string/write_everything"
                    android:background="@color/transparent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tagText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/primaryText"
                android:textSize="14dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

            <LinearLayout
                android:id="@+id/timeLy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/bold"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:id="@+id/timeBtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="7dp"
                            android:src="@drawable/time"
                            android:tint="@color/iconTint"/>

                        <ImageView
                            android:id="@+id/durationBtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="7dp"
                            android:src="@drawable/check"
                            android:tint="@color/iconTint"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/smallStartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time"
                            android:textColor="@color/primaryText"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/bigStartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time"
                            android:textColor="@color/primaryText"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/startEndDivider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="~"
                        android:textColor="@color/primaryText"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/endLy"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/smallEndText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1986년 10월 19일"
                            android:textColor="@color/primaryText"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/bigEndText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24:00"
                            android:textColor="@color/primaryText"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/durationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textColor="@color/disableText"
                            android:textSize="12dp"/>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ddayLy"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/countdown"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/dday"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <TextView
                    android:id="@+id/ddayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginTop="10dp"
                    android:text="@string/dday"
                    android:textColor="@color/primaryText"
                    android:textSize="22dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/checkBox"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:transformPivotY="2dp"
                android:transformPivotX="15dp"
                android:src="@drawable/check"
                android:background="?android:attr/selectableItemBackground"/>

            <LinearLayout
                android:id="@+id/repeatLy"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/repeat"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/repeat"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <TextView
                    android:id="@+id/repeatText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/repeat"
                    android:textColor="@color/primaryText"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarmLy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/alarm"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/alarm"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <TextView
                    android:id="@+id/alarmText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/alarm"
                    android:textColor="@color/primaryText"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/percentageLy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/progress"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/percentage"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/percentage"
                    android:textColor="@color/primaryText"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkListLy"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/checklist"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/checklist"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:colorFlag="disable"/>

                <com.ayaan.twelvepages.ui.view.CheckListView
                    android:id="@+id/checkListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLy"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/location"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/location"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/location"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp">

                    <FrameLayout
                        android:id="@+id/mapLy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </FrameLayout>

                    <View
                        android:id="@+id/mapTouchView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/memoLy"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/note"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/memo"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <EditText
                    android:id="@+id/memoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"
                    android:background="@color/transparent"
                    android:hint="@string/enter_memo"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkLy"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:tint="@color/disableText"
                        android:src="@drawable/clip"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/attachment"
                        android:textColor="@color/disableText"
                        android:textSize="13dp" />

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    app:colorFlag="disable"/>

                <com.ayaan.twelvepages.ui.view.LinkListView
                    android:id="@+id/linkListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOptionBtn"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="7dp"
                    android:src="@drawable/add"
                    android:tint="@color/disableText"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/add_option"
                    android:textColor="@color/disableText"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <HorizontalScrollView
        android:id="@+id/textEditorLy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:elevation="10dp"
        android:background="@color/background"
        android:visibility="gone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/editorTimeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/time"
                android:padding="12dp"
                android:tint="@color/disableText"/>

            <ImageView
                android:id="@+id/editorQuotesBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>

            <ImageView
                android:id="@+id/editorQuoteBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>

            <ImageView
                android:id="@+id/editorDotBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>

            <ImageView
                android:id="@+id/editorUpBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>


            <ImageView
                android:id="@+id/editorDownBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>


            <ImageView
                android:id="@+id/editorLeftBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>


            <ImageView
                android:id="@+id/editorRightBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/add"
                android:padding="12dp"
                android:tint="@color/disableText"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/backgroundDark"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/colorBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/circle_fill"
            android:tint="@color/iconTint"/>

        <TextView
            android:id="@+id/folderText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:text="1986년 10월 19일"/>

        <LinearLayout
            android:animateLayoutChanges="true"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/pinBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="7dp"
                android:src="@drawable/pin"
                android:tint="@color/iconTint"/>

            <ImageView
                android:id="@+id/styleBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="7dp"
                android:src="@drawable/sticker"
                android:tint="@color/iconTint"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>