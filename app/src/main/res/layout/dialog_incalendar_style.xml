<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/contentLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/popup_dialog_background"
        android:elevation="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/bold"
                android:text="@string/calendarBlockStyle"/>

            <com.ayaan.twelvepages.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                app:colorFlag="primary"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingRight="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:text="@string/preview"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="270dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:id="@+id/previewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.0"
                    android:scaleY="1.0"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="120dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/dateLy"
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="2.5dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp">

                                        <TextView
                                            android:id="@+id/dateText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="13dp"
                                            android:layout_marginTop="0.8dp"
                                            android:includeFontPadding="false"
                                            android:textSize="11dp"
                                            android:textColor="@color/primaryText"
                                            android:text="27"
                                            android:fontFamily="@font/bold_c"/>

                                        <TextView
                                            android:id="@+id/dowText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="13dp"
                                            android:includeFontPadding="false"
                                            android:layout_marginTop="0.5dp"
                                            android:layout_marginLeft="2dp"
                                            android:textSize="9dp"
                                            android:maxLines="1"
                                            android:textColor="@color/primaryText"
                                            android:text="WED"
                                            android:fontFamily="@font/bold_c"/>

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/holiText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="3dp"
                                        android:textSize="8dp"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:text="@string/today"
                                        android:textColor="@color/primaryText"
                                        android:fontFamily="@font/bold"/>

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="130dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="2.5dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp">

                                        <TextView
                                            android:id="@+id/dateText2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="13dp"
                                            android:layout_marginTop="0.8dp"
                                            android:includeFontPadding="false"
                                            android:textSize="11dp"
                                            android:textColor="@color/primaryText"
                                            android:text="27"
                                            android:fontFamily="@font/bold_c"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="130dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="2.5dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp">

                                        <TextView
                                            android:id="@+id/dateText3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="13dp"
                                            android:layout_marginTop="0.8dp"
                                            android:includeFontPadding="false"
                                            android:textSize="11dp"
                                            android:textColor="@color/primaryText"
                                            android:text="27"
                                            android:fontFamily="@font/bold_c"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="130dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="2.5dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp">

                                        <TextView
                                            android:id="@+id/dateText4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="13dp"
                                            android:layout_marginTop="0.8dp"
                                            android:includeFontPadding="false"
                                            android:textSize="11dp"
                                            android:textColor="@color/primaryText"
                                            android:text="27"
                                            android:fontFamily="@font/bold_c"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="60dp"
                            android:layout_height="130dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="2.5dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp">

                                        <TextView
                                            android:id="@+id/dateText5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="13dp"
                                            android:layout_marginTop="0.8dp"
                                            android:includeFontPadding="false"
                                            android:textSize="11dp"
                                            android:textColor="@color/primaryText"
                                            android:text="27"
                                            android:fontFamily="@font/bold_c"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

        <com.ayaan.twelvepages.ui.view.base.Line
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:colorFlag="disable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/bold"
            android:text="@string/type"/>

        <com.ayaan.twelvepages.ui.view.FormulaPickerView
            android:id="@+id/formulaPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:clipToPadding="false">
        </com.ayaan.twelvepages.ui.view.FormulaPickerView>

        <LinearLayout
            android:id="@+id/shapeLy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/bold"
                android:text="@string/shape"/>

            <com.ayaan.twelvepages.ui.view.ShapePickerView
                android:id="@+id/shapePickerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:clipToPadding="false">
            </com.ayaan.twelvepages.ui.view.ShapePickerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/colorLy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/bold"
                android:text="@string/color"/>

            <LinearLayout
                android:id="@+id/colorBtn"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/colorImg"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:padding="15dp"
                    android:src="@drawable/normal_rect_fill"
                    android:tint="@color/primaryText"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/imageLy"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/bold"
                android:text="@string/image"/>

            <LinearLayout
                android:id="@+id/imageBtn"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="right"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/Img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/primaryText"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:text="@string/cancel"/>

            <TextView
                android:id="@+id/confirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:text="@string/confirm"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>