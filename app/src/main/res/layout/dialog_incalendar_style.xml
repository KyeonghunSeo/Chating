<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/contentLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/popup_dialog_background"
        android:elevation="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/bold"
                android:text="@string/calendarBlockStyle"/>

            <com.hellowo.journey.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                app:colorFlag="primary"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/previewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:transformPivotY="70dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="130dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/dateLy"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="2.5dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp">

                                    <TextView
                                        android:id="@+id/dateText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="13dp"
                                        android:layout_marginTop="0.8dp"
                                        android:includeFontPadding="false"
                                        android:textSize="11dp"
                                        android:textColor="@color/primaryText"
                                        android:text="27"
                                        android:fontFamily="@font/bold"/>

                                    <TextView
                                        android:id="@+id/dowText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="13dp"
                                        android:includeFontPadding="false"
                                        android:layout_marginTop="0.5dp"
                                        android:layout_marginLeft="2dp"
                                        android:textSize="9dp"
                                        android:maxLines="1"
                                        android:textColor="@color/primaryText"
                                        android:text="@string/wed"
                                        android:fontFamily="@font/bold"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/holiText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="3dp"
                                    android:textSize="8dp"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:text="@string/today"
                                    android:textColor="@color/primaryText"
                                    android:fontFamily="@font/bold"/>

                            </LinearLayout>

                            <FrameLayout
                                android:id="@+id/bar"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="2dp"
                                android:transformPivotX="0dp"
                                android:background="@color/primaryText">
                            </FrameLayout>

                        </FrameLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="130dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="2.5dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="13dp"
                                        android:layout_marginTop="0.8dp"
                                        android:includeFontPadding="false"
                                        android:textSize="11dp"
                                        android:textColor="@color/primaryText"
                                        android:text="27"/>

                                </LinearLayout>

                            </LinearLayout>

                        </FrameLayout>

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <com.hellowo.journey.ui.view.InCalendarStyleTypePickerView
            android:id="@+id/styleTypePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.hellowo.journey.ui.view.InCalendarStyleTypePickerView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:text="@string/cancel"/>

            <TextView
                android:id="@+id/confirmBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:text="@string/confirm"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>