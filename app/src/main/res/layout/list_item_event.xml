<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/backLy"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </LinearLayout>

    <FrameLayout
        android:id="@+id/frontLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp">

            <View
                android:id="@+id/upperTimeLine"
                android:layout_width="2dp"
                android:layout_height="20.5dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/almostWhite"/>

            <View
                android:id="@+id/bottomTimeLine"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginTop="29.5dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/almostWhite"/>

            <ImageView
                android:id="@+id/dotImg"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19.5dp"
                android:tint="@color/disableText"
                android:src="@drawable/circle_fill"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_margin="14.5dp"
            android:visibility="gone"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="80dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="12dp"
                    android:gravity="right"
                    android:textColor="@color/primaryText"
                    android:text="4시 ~ 5시"/>

                <TextView
                    android:id="@+id/tagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/primaryText"
                    android:text="#love#peace"/>

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/primaryText"
                    android:text="title"/>

            </LinearLayout>

            <TextView
                android:id="@+id/memoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="메모" />

            <LinearLayout
                android:id="@+id/alarmLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_access_alarm_black_48dp"/>

                <TextView
                    android:id="@+id/alarmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="12dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/thin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="alarm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_place_black_48dp"/>

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="12dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/thin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="location" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repeatLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:tint="@color/primaryText"
                    android:src="@drawable/sharp_repeat_black_48dp"/>

                <TextView
                    android:id="@+id/repeatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="12dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/thin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="repeat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageLy"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/linkLy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/linkImg"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/linkText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/primaryText"
                        android:ellipsize="end"
                        android:maxLines="20"
                        android:text="Title"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>