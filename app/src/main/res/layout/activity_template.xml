<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/back_c"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/avenir_black"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/delete_c"
            android:textSize="14dp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:textColor="@color/red"
            android:fontFamily="@font/avenir_black"
            android:background="?android:attr/selectableItemBackground"/>

    </FrameLayout>

    <View
        android:id="@+id/topShadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        android:background="@drawable/line_top_shadow"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/folderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/folder"
                android:textSize="16dp"
                android:textColor="@color/secondaryText"
                android:background="?android:attr/selectableItemBackground"/>

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:textSize="28dp"
                android:hint="@string/template_title"
                android:textColorHint="@color/disableText"
                android:background="@drawable/blank"
                android:fontFamily="@font/regular"/>

            <com.hellowo.journey.ui.view.TagView
                android:id="@+id/tagView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            </com.hellowo.journey.ui.view.TagView>


            <LinearLayout
                android:id="@+id/tagBtn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/regular"
                    android:text="@string/tag"/>

            </LinearLayout>

            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hellowo.journey.ui.view.base.Line
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:colorFlag="secondary"/>

                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="14dp"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/bold"
                        android:text="@string/init_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:textSize="14dp"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/bold"
                        android:text="커서위치 : 3"/>

                </FrameLayout>

                <EditText
                    android:id="@+id/initTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:hint="@string/init_text_hint"
                    android:textColorHint="@color/disableText"
                    android:background="@drawable/blank"
                    android:fontFamily="@font/regular"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/colorBtn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/regular"
            android:text="@string/color"/>

        <ImageView
            android:id="@+id/colorImg"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/primary_rect_fill_radius_1"
            android:tint="@color/primaryText"/>

    </LinearLayout>


</FrameLayout>