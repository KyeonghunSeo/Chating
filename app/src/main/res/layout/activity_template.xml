<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_left"
                android:padding="16dp"
                android:tint="@color/secondaryText"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/bold_s"
                android:textSize="18dp"
                android:text="@string/template"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/more"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"/>

        <com.ayaan.twelvepages.ui.view.base.Line
            android:id="@+id/topShadow"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            app:colorFlag="light_line"
            android:visibility="gone"/>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="60dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textSize="24dp"
                    android:hint="@string/template_title"
                    android:textColorHint="@color/disableText"
                    android:background="@drawable/blank"
                    android:fontFamily="@font/bold_s"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/tagBtn"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:background="@drawable/edit_tag_new"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:alpha="0.4"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="@string/select_tag"
                        android:textColor="@color/secondaryText"/>

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.TagView
                    android:id="@+id/tagView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.ayaan.twelvepages.ui.view.TagView>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/dashed_line"
                android:layout_gravity="center"
                android:layerType="software"/>

            <FrameLayout
                android:id="@+id/symbolBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/symbol"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right|center_vertical">

                    <ImageView
                        android:id="@+id/symbolColor"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <ImageView
                        android:id="@+id/symbalImg"
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="2dp"/>

                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/colorBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/color"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/color"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right|center_vertical"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/colorBg"
                        android:layout_width="50dp"
                        android:layout_height="16dp"
                        android:src="@drawable/normal_rect_fill"
                        android:tint="@color/light_line"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/recordViewStyleBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/record_in_calendar_style"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/calendarBlockStyle"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/recordViewStyleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/titleBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/title"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/title"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/initTitleLy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/cursor"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/init_text"/>

                    <TextView
                        android:id="@+id/initTextCursorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:textSize="12dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/cursor_pos"/>

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.CustomEditText
                    android:id="@+id/initTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:hint="@string/init_text_hint"
                    android:textColorHint="@color/disableText"
                    android:background="@drawable/blank"
                    android:fontFamily="@font/regular_s"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/memoBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/memo"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/main_text"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/memoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/initMemoLy"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/cursor"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/init_text"/>

                    <TextView
                        android:id="@+id/initMemoCursorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:textSize="12dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/cursor_pos"/>

                </LinearLayout>

                <com.ayaan.twelvepages.ui.view.base.CustomEditText
                    android:id="@+id/initMemoInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:hint="@string/init_text_hint"
                    android:textColorHint="@color/disableText"
                    android:background="@drawable/blank"
                    android:fontFamily="@font/regular_s"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/timeBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/time"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/time"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"
                    android:text="@string/unuse"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/alarmBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/alarm"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/alarm"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/alarmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"
                    android:text="@string/unuse"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/checkBoxBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/check"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/checkbox"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/checkBoxText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"
                    android:text="@string/unuse"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/counterBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="15dp"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/alarm"
                        android:tint="@color/secondaryText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/alarm"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/counterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/secondaryText"
                    android:fontFamily="@font/bold_s"
                    android:text="@string/unuse"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/folderBtn"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tab"
                android:tint="@color/secondaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/bold_s"
                android:text="@string/folder"/>

        </LinearLayout>

        <TextView
            android:id="@+id/folderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/secondaryText"
            android:text="@string/folder"/>

    </LinearLayout>

</FrameLayout>