<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

   <FrameLayout
       android:id="@+id/contentLy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/topLy"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:gravity="center_vertical">

         <FrameLayout
             android:id="@+id/colorBg"
             android:layout_width="15dp"
             android:layout_height="1.0dp"
             android:layout_marginLeft="25dp">

         </FrameLayout>

         <ImageView
             android:id="@+id/symbolImg"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:tint="@color/secondaryText"/>

         <LinearLayout
             android:id="@+id/timeLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="9dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/regular_s"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@string/date_time" />

         </LinearLayout>

         <View
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"/>

         <TextView
             android:id="@+id/updatedText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="-5dp"
             android:layout_gravity="center_vertical"
             android:maxLines="1"
             android:ellipsize="end"
             android:textSize="7dp"
             android:fontFamily="@font/thin_s"
             android:textColor="@color/disableText"
             android:text="@string/date_time"
             android:visibility="visible"/>

         <ImageView
             android:id="@+id/moreImg"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginRight="14dp"
             android:padding="11dp"
             android:src="@drawable/more"
             android:tint="@color/disableText"
             android:background="?android:attr/selectableItemBackground"/>

      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="25dp"
          android:paddingBottom="10dp"
          android:paddingLeft="25dp"
          android:paddingRight="25dp"
          android:clipChildren="false"
          android:clipToPadding="false">

         <FrameLayout
             android:id="@+id/titleLy"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/checkBox"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:scaleType="centerInside"
                android:layout_marginTop="5dp"
                android:src="@drawable/check"
                android:tint="@color/secondaryText"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="13dp"
                android:fontFamily="@font/bold_s"
                android:textColor="@color/secondaryText"
                android:text="　　titletitletitle"/>

         </FrameLayout>

         <TextView
             android:id="@+id/memoText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="3dp"
             android:layout_marginRight="20dp"
             android:lineSpacingExtra="3dp"
             android:textSize="13dp"
             android:textColor="@color/secondaryText"
             android:ellipsize="end"
             android:maxLines="10"
             android:text="@string/memo" />

         <com.ayaan.twelvepages.ui.view.TagView
             android:id="@+id/tagView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp">
         </com.ayaan.twelvepages.ui.view.TagView>

         <LinearLayout
             android:id="@+id/optionLy"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="1dp"
             android:layout_marginBottom="3dp">

            <LinearLayout
                android:id="@+id/alarmLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/alarm"/>

               <TextView
                   android:id="@+id/alarmText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="alarm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repeatLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/repeat"/>

               <TextView
                   android:id="@+id/repeatText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="repeat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ddayLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/countdown"/>

               <TextView
                   android:id="@+id/ddayText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="countdown" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkListLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/checklist"/>

               <TextView
                   android:id="@+id/checkListText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="checkList" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/location"/>

               <TextView
                   android:id="@+id/locationText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="location" />

            </LinearLayout>

         </LinearLayout>

         <!--
                        <FrameLayout
                            android:id="@+id/imageLy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clipToPadding="false"
                            android:clipChildren="false">

                           <androidx.viewpager.widget.ViewPager
                               android:id="@+id/photoPager"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:clipChildren="false"
                               android:clipToPadding="false">
                           </androidx.viewpager.widget.ViewPager>

                        </FrameLayout>
            -->

         <androidx.cardview.widget.CardView
             android:id="@+id/imageLy"
             android:layout_width="match_parent"
             android:layout_height="70dp"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="3dp"
             app:cardElevation="0dp"
             app:cardCornerRadius="1.0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/mainImgView"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:scaleType="centerCrop"/>

               <FrameLayout
                   android:id="@+id/subImageLy"
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:layout_marginLeft="1dp">

                  <ImageView
                      android:id="@+id/subImageView"
                      android:layout_width="70dp"
                      android:layout_height="70dp"
                      android:scaleType="centerCrop"/>

                  <TextView
                      android:id="@+id/subImageText"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:textSize="16dp"
                      android:background="@drawable/highlightcover"
                      android:text="+10"/>

               </FrameLayout>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <com.ayaan.twelvepages.ui.view.WebLinkListView
             android:id="@+id/webLinkView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="3dp"
             android:clipChildren="false"
             android:clipToPadding="false">
         </com.ayaan.twelvepages.ui.view.WebLinkListView>

         <View
             android:id="@+id/divider"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginTop="20dp"
             android:background="@drawable/dashed_line"
             android:layerType="software"/>

      </LinearLayout>

      <View
          android:id="@+id/checkArea"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="18dp"
          android:layout_marginLeft="14dp"/>

   </FrameLayout>

</FrameLayout>