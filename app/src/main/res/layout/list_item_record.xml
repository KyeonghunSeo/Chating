<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="15dp"
       android:paddingBottom="10dp"
       android:paddingLeft="20dp"
       android:paddingRight="20dp"
       android:clipChildren="false"
       android:clipToPadding="false">

      <FrameLayout
          android:layout_width="17dp"
          android:layout_height="17dp">

         <ImageView
             android:id="@+id/colorImg"
             android:layout_width="17dp"
             android:layout_height="17dp"
             android:scaleType="centerInside"
             android:src="@drawable/color_bg"
             android:tint="@color/secondaryText"/>

         <ImageView
             android:id="@+id/symbolImg"
             android:layout_width="17dp"
             android:layout_height="17dp"
             android:padding="4dp"
             android:scaleType="centerInside"
             android:src="@drawable/done"
             android:tint="@color/secondaryText"/>

      </FrameLayout>

      <LinearLayout
          android:id="@+id/optionLy"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="20dp"
          android:clipChildren="false"
          android:clipToPadding="false">

          <TextView
              android:id="@+id/titleText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="8dp"
              android:lineSpacingExtra="2dp"
              android:maxLines="3"
              android:ellipsize="end"
              android:textSize="13dp"
              android:fontFamily="@font/bold_s"
              android:textColor="@color/secondaryText"
              android:text=""/>

         <TextView
             android:id="@+id/memoText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
             android:lineSpacingExtra="2dp"
             android:textSize="13dp"
             android:textColor="@color/secondaryText"
             android:ellipsize="end"
             android:maxLines="10"
             android:text="@string/memo" />

         <com.ayaan.twelvepages.ui.view.TagView
             android:id="@+id/tagView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="6dp">
         </com.ayaan.twelvepages.ui.view.TagView>

         <LinearLayout
             android:id="@+id/smallOptionLy"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="1dp">

            <LinearLayout
                android:id="@+id/timeLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

               <ImageView
                   android:id="@+id/timeImg"
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/calendar"/>

               <TextView
                   android:id="@+id/timeText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="@string/date_time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarmLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/alarm"/>

               <TextView
                   android:id="@+id/alarmText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="alarm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repeatLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/repeat"/>

               <TextView
                   android:id="@+id/repeatText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="repeat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ddayLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/countdown"/>

               <TextView
                   android:id="@+id/ddayText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="countdown" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkListLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/checklist"/>

               <TextView
                   android:id="@+id/checkListText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="checkList" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="11dp"
                   android:layout_height="11dp"
                   android:tint="@color/secondaryText"
                   android:src="@drawable/location"/>

               <TextView
                   android:id="@+id/locationText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:textSize="9dp"
                   android:textColor="@color/secondaryText"
                   android:fontFamily="@font/regular_s"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="location" />

            </LinearLayout>

         </LinearLayout>

         <androidx.cardview.widget.CardView
             android:id="@+id/imageLy"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginBottom="10dp"
             android:outlineSpotShadowColor="@color/secondaryText"
             android:outlineAmbientShadowColor="@color/secondaryText"
             app:cardElevation="0dp"
             app:cardCornerRadius="1.0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/mainImgView"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:scaleType="centerCrop"/>

               <FrameLayout
                   android:id="@+id/subImageLy"
                   android:layout_width="60dp"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="1dp">

                  <ImageView
                      android:id="@+id/subImageView"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:scaleType="centerCrop"/>

                  <TextView
                      android:id="@+id/subImageText"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:textSize="14dp"
                      android:background="@drawable/highlightcover"
                      android:text="+10"/>

               </FrameLayout>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <com.ayaan.twelvepages.ui.view.WebLinkListView
             android:id="@+id/webLinkView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
             android:clipChildren="false"
             android:clipToPadding="false">
         </com.ayaan.twelvepages.ui.view.WebLinkListView>

      </LinearLayout>

      <!--
                     <FrameLayout
                         android:id="@+id/imageLy"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:paddingTop="5dp"
                         android:paddingBottom="5dp"
                         android:clipToPadding="false"
                         android:clipChildren="false">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/photoPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false">
                        </androidx.viewpager.widget.ViewPager>

                     </FrameLayout>
         -->

   </LinearLayout>

   <View
       android:id="@+id/checkArea"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginTop="8dp"
       android:layout_marginLeft="8dp"/>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginRight="18dp"
       android:layout_gravity="right"
       android:gravity="right">

      <TextView
          android:id="@+id/recordViewStyleText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:textSize="7dp"
          android:fontFamily="@font/thin_s"
          android:textColor="@color/disableText"
          android:text="@string/date_time"
          android:visibility="visible"/>

      <TextView
          android:id="@+id/updatedText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:textSize="7dp"
          android:fontFamily="@font/thin_s"
          android:textColor="@color/disableText"
          android:text="@string/date_time"
          android:visibility="visible"/>

   </LinearLayout>

   <ImageView
       android:id="@+id/moreImg"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_marginTop="2dp"
       android:layout_marginRight="5dp"
       android:padding="11dp"
       android:layout_gravity="right"
       android:src="@drawable/more"
       android:tint="@color/disableText"
       android:background="?android:attr/selectableItemBackground"/>

   <View
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_gravity="bottom"
       android:background="@drawable/dashed_line"
       android:layerType="software"/>

</FrameLayout>