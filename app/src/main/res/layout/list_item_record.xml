<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

   <FrameLayout
       android:id="@+id/contentLy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:minHeight="60dp">

      <FrameLayout
          android:layout_width="60dp"
          android:layout_height="match_parent">

         <View
             android:id="@+id/upperLine"
             android:layout_width="2dp"
             android:layout_height="32dp"
             android:background="@color/light_line"
             android:layout_gravity="center_horizontal"
             android:visibility="gone"/>

         <View
             android:id="@+id/bottomLine"
             android:layout_width="2dp"
             android:layout_height="match_parent"
             android:layout_marginTop="32dp"
             android:background="@color/light_line"
             android:layout_gravity="center_horizontal"
             android:visibility="gone"/>

         <ImageView
             android:id="@+id/iconImg"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_gravity="center_horizontal"
             android:background="?android:attr/selectableItemBackground"
             android:padding="15dp"
             android:src="@drawable/circle_fill"
             android:tint="@color/primaryText"/>

      </FrameLayout>

      <ImageView
          android:id="@+id/moreImg"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_margin="10dp"
          android:padding="12dp"
          android:layout_gravity="right"
          android:src="@drawable/more"
          android:tint="@color/secondaryText"
          android:background="?android:attr/selectableItemBackground"/>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="60dp">

         <TextView
             android:id="@+id/titleText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minHeight="40dp"
             android:gravity="center_vertical"
             android:textSize="14dp"
             android:fontFamily="@font/bold"
             android:textColor="@color/primaryText"
             android:text="title"/>

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <TextView
                android:id="@+id/tagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/primaryText"
                android:text="#love#peace"/>

            <LinearLayout
                android:id="@+id/timeLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:id="@+id/timeIcon"
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/schedule"/>

               <TextView
                   android:id="@+id/timeText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="5"
                   android:text="메모" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alarmLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/alarm"/>

               <TextView
                   android:id="@+id/alarmText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="alarm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/repeatLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/repeat"/>

               <TextView
                   android:id="@+id/repeatText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="repeat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/location"/>

               <TextView
                   android:id="@+id/locationText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="location" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/memoLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

               <ImageView
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:tint="@color/iconTint"
                   android:src="@drawable/memo"/>

               <TextView
                   android:id="@+id/memoText"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="3dp"
                   android:textSize="12dp"
                   android:textColor="@color/primaryText"
                   android:fontFamily="@font/thin"
                   android:ellipsize="end"
                   android:maxLines="5"
                   android:text="메모" />

            </LinearLayout>
<!--
            <FrameLayout
                android:id="@+id/imageLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:clipToPadding="false"
                android:clipChildren="false">

               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/photoPager"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clipChildren="false"
                   android:clipToPadding="false">
               </androidx.viewpager.widget.ViewPager>

            </FrameLayout>
-->

            <androidx.cardview.widget.CardView
                android:id="@+id/imageLy"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                  <ImageView
                      android:id="@+id/mainImgView"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:scaleType="centerCrop"/>

                  <FrameLayout
                      android:id="@+id/subImageLy"
                      android:layout_width="80dp"
                      android:layout_height="80dp">

                     <ImageView
                         android:id="@+id/subImageView"
                         android:layout_width="80dp"
                         android:layout_height="80dp"
                         android:layout_marginLeft="1dp"
                         android:scaleType="centerCrop"/>

                     <TextView
                         android:id="@+id/subImageText"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:textColor="@color/white"
                         android:textSize="20dp"
                         android:background="@drawable/highlightcover"
                         android:text="+10"/>

                     <com.ayaan.twelvepages.ui.view.base.Line
                         android:layout_width="1dp"
                         android:layout_height="match_parent"
                         app:colorFlag="secondary"/>

                  </FrameLayout>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/linkLy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/linkImg"
                      android:layout_width="100dp"
                      android:layout_height="60dp"
                      android:scaleType="centerCrop"/>

                  <TextView
                      android:id="@+id/linkText"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="16dp"
                      android:lineSpacingExtra="2dp"
                      android:textColor="@color/primaryText"
                      android:ellipsize="end"
                      android:maxLines="20"
                      android:text="Title"/>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

         </LinearLayout>

      </LinearLayout>

   </FrameLayout>

</FrameLayout>