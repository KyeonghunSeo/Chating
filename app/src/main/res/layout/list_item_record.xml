<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

   <FrameLayout
       android:id="@+id/contentLy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="2dp"
       android:minHeight="50dp">

      <FrameLayout
          android:layout_width="50dp"
          android:layout_height="match_parent">

         <View
             android:id="@+id/upperLine"
             android:layout_width="2dp"
             android:layout_height="32dp"
             android:background="@color/light_line"
             android:layout_gravity="center_horizontal"
             android:visibility="gone"/>

         <View
             android:id="@+id/bottomLine"
             android:layout_width="2dp"
             android:layout_height="match_parent"
             android:layout_marginTop="32dp"
             android:background="@color/light_line"
             android:layout_gravity="center_horizontal"
             android:visibility="gone"/>

         <ImageView
             android:id="@+id/iconImg"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_gravity="center_horizontal"
             android:background="?android:attr/selectableItemBackground"
             android:padding="17dp"
             android:src="@drawable/circle_fill"
             android:tint="@color/primaryText"/>

         <ImageView
             android:id="@+id/symbolImg"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_gravity="center_horizontal"
             android:background="?android:attr/selectableItemBackground"
             android:padding="20dp"
             android:tint="@color/primaryText"/>

      </FrameLayout>

      <ImageView
          android:id="@+id/moreImg"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:padding="18dp"
          android:layout_gravity="right"
          android:src="@drawable/more"
          android:tint="@color/secondaryText"
          android:background="?android:attr/selectableItemBackground"/>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="25dp"
          android:paddingBottom="10dp">

         <TextView
             android:id="@+id/titleText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="16.0dp"
             android:textSize="15dp"
             android:fontFamily="@font/bold"
             android:textColor="@color/primaryText"
             android:maxLines="10"
             android:ellipsize="end"
             android:text="title"/>

         <com.ayaan.twelvepages.ui.view.TagView
             android:id="@+id/tagView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp">
         </com.ayaan.twelvepages.ui.view.TagView>

         <TextView
             android:id="@+id/memoText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:textSize="14dp"
             android:textColor="@color/primaryText"
             android:ellipsize="end"
             android:maxLines="10"
             android:text="메모" />

         <LinearLayout
             android:id="@+id/timeLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/schedule"/>

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="메모" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/alarmLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/alarm"/>

            <TextView
                android:id="@+id/alarmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="alarm" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/repeatLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/repeat"/>

            <TextView
                android:id="@+id/repeatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="repeat" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/locationLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/location"/>

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/thin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="location" />

         </LinearLayout>

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">
<!--
            <FrameLayout
                android:id="@+id/imageLy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:clipToPadding="false"
                android:clipChildren="false">

               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/photoPager"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:clipChildren="false"
                   android:clipToPadding="false">
               </androidx.viewpager.widget.ViewPager>

            </FrameLayout>
-->

            <androidx.cardview.widget.CardView
                android:id="@+id/imageLy"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                  <ImageView
                      android:id="@+id/mainImgView"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:scaleType="centerCrop"/>

                  <FrameLayout
                      android:id="@+id/subImageLy"
                      android:layout_width="80dp"
                      android:layout_height="80dp">

                     <ImageView
                         android:id="@+id/subImageView"
                         android:layout_width="80dp"
                         android:layout_height="80dp"
                         android:layout_marginLeft="1dp"
                         android:scaleType="centerCrop"/>

                     <TextView
                         android:id="@+id/subImageText"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:textColor="@color/white"
                         android:textSize="20dp"
                         android:background="@drawable/highlightcover"
                         android:text="+10"/>

                     <com.ayaan.twelvepages.ui.view.base.Line
                         android:layout_width="1dp"
                         android:layout_height="match_parent"
                         app:colorFlag="secondary"/>

                  </FrameLayout>

               </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.ayaan.twelvepages.ui.view.WebLinkListView
                android:id="@+id/webLinkView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.ayaan.twelvepages.ui.view.WebLinkListView>

         </LinearLayout>

      </LinearLayout>

   </FrameLayout>

</FrameLayout>