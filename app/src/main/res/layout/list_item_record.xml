<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

   <FrameLayout
       android:id="@+id/contentLy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <LinearLayout
          android:id="@+id/topLy"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:gravity="center_vertical">

         <FrameLayout
             android:id="@+id/colorBg"
             android:layout_width="15dp"
             android:layout_height="1.0dp"
             android:layout_marginLeft="20dp">

         </FrameLayout>

         <ImageView
             android:id="@+id/symbolImg"
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:tint="@color/secondaryText"/>

         <LinearLayout
             android:id="@+id/timeLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="9dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/regular_s"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@string/date_time" />

         </LinearLayout>

         <View
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"/>

         <LinearLayout
             android:id="@+id/alarmLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:tint="@color/iconTint"
                android:src="@drawable/alarm"/>

            <TextView
                android:id="@+id/alarmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="9dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/regular_s"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="alarm" />

         </LinearLayout>

         <ImageView
             android:id="@+id/moreImg"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_marginRight="5dp"
             android:padding="11dp"
             android:src="@drawable/more"
             android:tint="@color/secondaryText"
             android:background="?android:attr/selectableItemBackground"/>

      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="25dp"
          android:paddingBottom="10dp"
          android:paddingLeft="25dp"
          android:paddingRight="25dp"
          android:clipChildren="false"
          android:clipToPadding="false">

         <FrameLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <ImageView
                android:id="@+id/checkBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/check"
                android:paddingBottom="2dp"
                android:paddingRight="2dp"
                android:tint="@color/secondaryText"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="14dp"
                android:fontFamily="@font/bold_s"
                android:textColor="@color/secondaryText"
                android:text="title"/>

         </FrameLayout>

         <TextView
             android:id="@+id/memoText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="3dp"
             android:layout_marginRight="20dp"
             android:lineSpacingExtra="3dp"
             android:textSize="13dp"
             android:textColor="@color/secondaryText"
             android:ellipsize="end"
             android:maxLines="10"
             android:text="@string/memo" />

         <com.ayaan.twelvepages.ui.view.TagView
             android:id="@+id/tagView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp">
         </com.ayaan.twelvepages.ui.view.TagView>

         <LinearLayout
             android:id="@+id/repeatLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/repeat"/>

            <TextView
                android:id="@+id/repeatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/thin_s"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="repeat" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/ddayLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/countdown"/>

            <TextView
                android:id="@+id/ddayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/thin_s"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="countdown" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/checkListLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/checklist"/>

            <TextView
                android:id="@+id/checkListText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/thin_s"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="checkList" />

         </LinearLayout>

         <LinearLayout
             android:id="@+id/locationLy"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:tint="@color/iconTint"
                android:src="@drawable/location"/>

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/thin_s"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="location" />

         </LinearLayout>

         <!--
                        <FrameLayout
                            android:id="@+id/imageLy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:clipToPadding="false"
                            android:clipChildren="false">

                           <androidx.viewpager.widget.ViewPager
                               android:id="@+id/photoPager"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:clipChildren="false"
                               android:clipToPadding="false">
                           </androidx.viewpager.widget.ViewPager>

                        </FrameLayout>
            -->

         <androidx.cardview.widget.CardView
             android:id="@+id/imageLy"
             android:layout_width="match_parent"
             android:layout_height="70dp"
             android:layout_marginTop="5dp"
             app:cardElevation="0dp"
             app:cardCornerRadius="1dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/mainImgView"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:scaleType="centerCrop"/>

               <FrameLayout
                   android:id="@+id/subImageLy"
                   android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:layout_marginLeft="1dp">

                  <ImageView
                      android:id="@+id/subImageView"
                      android:layout_width="70dp"
                      android:layout_height="70dp"
                      android:scaleType="centerCrop"/>

                  <TextView
                      android:id="@+id/subImageText"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:textSize="16dp"
                      android:background="@drawable/highlightcover"
                      android:text="+10"/>

               </FrameLayout>

            </LinearLayout>

         </androidx.cardview.widget.CardView>

         <com.ayaan.twelvepages.ui.view.WebLinkListView
             android:id="@+id/webLinkView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp">
         </com.ayaan.twelvepages.ui.view.WebLinkListView>

         <TextView
             android:id="@+id/updatedText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginRight="0dp"
             android:maxLines="1"
             android:ellipsize="end"
             android:textSize="8dp"
             android:fontFamily="@font/thin_s"
             android:textColor="@color/disableText"
             android:text="@string/date_time"
             android:visibility="visible"/>


      </LinearLayout>

   </FrameLayout>

</FrameLayout>