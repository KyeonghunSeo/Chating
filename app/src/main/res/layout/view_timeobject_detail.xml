<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/backgroundLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:alpha="0.6">
    </View>

    <FrameLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="10dp"
        android:layout_gravity="bottom">

        <FrameLayout
            android:id="@+id/contentLy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/headerLy"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/folderLy"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/folderImg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/calendar_empty"
                            android:tint="@color/iconTint"/>

                        <TextView
                            android:id="@+id/folderText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/secondaryText"
                            android:fontFamily="@font/bold"
                            android:textSize="13dp"
                            android:text="1986년 10월 19일"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnsLy"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:id="@+id/addOptionBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/add"
                            android:tint="@color/iconTint"/>

                        <ImageView
                            android:id="@+id/colorBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/color_palette"
                            android:tint="@color/iconTint"/>

                        <ImageView
                            android:id="@+id/pinBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/pin"
                            android:tint="@color/iconTint"/>

                        <ImageView
                            android:id="@+id/styleBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/check"
                            android:tint="@color/iconTint"/>

                        <ImageView
                            android:id="@+id/deleteBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/delete"
                            android:tint="@color/iconTint"/>

                        <ImageView
                            android:id="@+id/moreBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="10dp"
                            android:src="@drawable/sharp_more_horiz_black_48dp"
                            android:tint="@color/iconTint"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <View
                android:id="@+id/topShadow"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/line_top_shadow"/>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/mainScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="45dp">

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/primaryText"
                        android:textSize="16dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/checkBox"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="1dp"
                            android:src="@drawable/check"
                            android:background="?android:attr/selectableItemBackground"/>

                        <com.txusballesteros.AutoscaleEditText
                            android:id="@+id/titleInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/line"
                            android:textSize="28dp"
                            android:hint="@string/write_everything"
                            android:background="@color/transparent"
                            app:linesLimit="0.8"
                            app:textScale="0.6"
                            app:animationDuration="200"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/timeLy"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="7dp"
                            android:tint="@color/iconTint"
                            android:src="@drawable/outline_date_range_black_48dp"/>

                        <TextView
                            android:id="@+id/timeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="time"
                            android:textColor="@color/primaryText"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular" />

                        <LinearLayout
                            android:id="@+id/durationLy"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|right">

                            <TextView
                                android:id="@+id/durationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25dp"
                                android:includeFontPadding="false"
                                android:textColor="@color/primaryText"
                                android:fontFamily="@font/bold"
                                android:text="3"/>

                            <TextView
                                android:id="@+id/unitText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="1dp"
                                android:textSize="12dp"
                                android:includeFontPadding="false"
                                android:textColor="@color/primaryText"
                                android:fontFamily="@font/regular"
                                android:text="@string/date_duration"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/repeatLy"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:background="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/repeatIcon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:tint="@color/primaryText"
                                android:src="@drawable/sharp_repeat_black_48dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/repeat"
                                android:textColor="@color/primaryText"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/repeatText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:lineSpacingExtra="3dp"
                            android:text="@string/repeat"
                            android:textColor="@color/primaryText"
                            android:textSize="14dp"
                            android:fontFamily="@font/regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ddayLy"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:tint="@color/primaryText"
                                android:src="@drawable/outline_event_available_black_48dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/dday"
                                android:textColor="@color/primaryText"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/ddayText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/dday"
                            android:textColor="@color/primaryText"
                            android:textSize="24dp"
                            android:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deadlineLy"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="7dp"
                            android:tint="@color/iconTint"
                            android:src="@drawable/sharp_hourglass_empty_black_48dp"/>

                        <TextView
                            android:id="@+id/deadlineText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/deadline"
                            android:textColor="@color/primaryText"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/percentageLy"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="7dp"
                            android:tint="@color/iconTint"
                            android:src="@drawable/outline_pie_chart_black_48dp"/>

                        <TextView
                            android:id="@+id/percentagetText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/percentage"
                            android:textColor="@color/primaryText"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkListLy"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:tint="@color/primaryText"
                                android:src="@drawable/checklist"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/checklist"
                                android:textColor="@color/primaryText"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <com.hellowo.journey.ui.view.CheckListView
                            android:id="@+id/checkListView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/locationLy"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:tint="@color/primaryText"
                                android:src="@drawable/outline_place_black_48dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/location"
                                android:textColor="@color/primaryText"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_marginTop="12dp"
                            android:lineSpacingExtra="3dp"
                            android:text="@string/location"
                            android:textColor="@color/primaryText"
                            android:textSize="14dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="12dp">

                            <fragment
                                android:id="@+id/map"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <View
                                android:id="@+id/mapTouchView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/memoLy"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:tint="@color/primaryText"
                                android:src="@drawable/note"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/memo"
                                android:textColor="@color/primaryText"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/memoInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/primaryText"
                            android:textSize="14dp"
                            android:fontFamily="@font/regular"
                            android:background="@color/transparent"
                            android:hint="@string/enter_memo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alarmLy"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginTop="7dp"
                            android:tint="@color/iconTint"
                            android:src="@drawable/sharp_access_alarm_black_48dp"/>

                        <TextView
                            android:id="@+id/alarmText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/alarm"
                            android:textColor="@color/primaryText"
                            android:textSize="16dp"
                            android:fontFamily="@font/regular" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <HorizontalScrollView
                android:id="@+id/textEditorLy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:elevation="10dp"
                android:background="@color/background"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/editorTimeBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_access_time_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>

                    <ImageView
                        android:id="@+id/editorQuotesBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>

                    <ImageView
                        android:id="@+id/editorQuoteBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>

                    <ImageView
                        android:id="@+id/editorDotBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>

                    <ImageView
                        android:id="@+id/editorUpBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>


                    <ImageView
                        android:id="@+id/editorDownBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>


                    <ImageView
                        android:id="@+id/editorLeftBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>


                    <ImageView
                        android:id="@+id/editorRightBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/sharp_format_quote_black_48dp"
                        android:padding="12dp"
                        android:tint="@color/disableText"/>

                </LinearLayout>

            </HorizontalScrollView>

        </FrameLayout>

    </FrameLayout>

</FrameLayout>