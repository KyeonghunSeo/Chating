<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="15dp"
            app:cardCornerRadius="8dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp">

                <LinearLayout
                    android:id="@+id/contentLy"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="@dimen/extra_margin"
                    android:paddingRight="@dimen/extra_margin">

                    <EditText
                        android:id="@+id/titleInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="@string/untitle"/>

                    <LinearLayout
                        android:id="@+id/timeLy"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/timeStartLy"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/startSmallTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:text="2018년 9월"/>

                            <TextView
                                android:id="@+id/startBigTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/bold"
                                android:text="6일"/>

                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/locationLy"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/deleteBtn"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_outline_delete"
                            android:tint="@color/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="@string/delete"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/styleEditLy"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/background"
            android:elevation="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/colorBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/black"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/fontColorText"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_color_lens_24px"
                    android:layout_gravity="center"
                    android:tint="@color/white"/>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/confirmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/confirm"/>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>