<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/coverLy"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/coverImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50.0dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/regular_s"
                android:textSize="16dp"
                android:shadowColor="@color/disableText"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/style" />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/packLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="55dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg0" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg1" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg2" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg3" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg4" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg5" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg6" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg7" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg8" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="30.0dp"
                android:layout_height="30.0dp"
                android:src="@drawable/normal_rect_fill"
                android:padding="6dp"
                android:id="@+id/colorImg9" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/recent"
            android:tint="@color/disableText" />

        <TextView
            android:id="@+id/noMessageTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/disableText"
            android:text="@string/recent_color_empty" />

    </LinearLayout>

</LinearLayout>