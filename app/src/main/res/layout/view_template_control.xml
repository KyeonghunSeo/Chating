<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <View
        android:id="@+id/backgroundLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">
    </View>

    <FrameLayout
        android:id="@+id/listLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:clipChildren="false">

        <LinearLayout
            android:id="@+id/addNewBtn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/sharp_add_black_48dp"
                android:tint="@color/primaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/add_new"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editTemplateBtn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/sharp_create_black_48dp"
                android:tint="@color/primaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/edit_template"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:clipChildren="false">
        </androidx.recyclerview.widget.RecyclerView>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/controllView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/background"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/templateIconImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/sharp_add_black_48dp"
            android:tint="@color/primaryText"/>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/touchEventView"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</FrameLayout>