<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <View
        android:id="@+id/backgroundLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:visibility="invisible">
    </View>

    <FrameLayout
        android:id="@+id/listLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="150dp"
        android:clipChildren="false">

        <LinearLayout
            android:id="@+id/addNewBtn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/sharp_add_black_48dp"
                android:tint="@color/primaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/add_new"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editTemplateBtn"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/sharp_create_black_48dp"
                android:tint="@color/primaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primaryText"
                android:textSize="12dp"
                android:text="@string/edit_template"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:clipChildren="false">
        </androidx.recyclerview.widget.RecyclerView>

    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/controlLy"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom|right"
        android:animateLayoutChanges="true"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/decoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/primaryText"
            app:cardCornerRadius="0dp"
            app:cardElevation="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/sharp_photo_filter_black_48dp"
                android:tint="@color/white"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/addBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/primaryText"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/templateIconImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp"
                android:src="@drawable/sharp_add_black_48dp"
                android:tint="@color/white"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>