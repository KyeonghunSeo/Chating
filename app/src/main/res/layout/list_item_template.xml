<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineSpotShadowColor="@color/semiPrimaryText"
        android:outlineAmbientShadowColor="@color/semiPrimaryText"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/backgroundDark"
        app:cardElevation="10dp">

        <FrameLayout
            android:id="@+id/backgroundLy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/backgroundDark"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bookmark"
                android:tint="@color/backgroundDark"
                android:layout_gravity="right"
                android:layout_marginRight="2dp"
                android:layout_marginTop="-5dp"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/contentLy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/colorBtn"
                android:layout_width="13dp"
                android:layout_height="2dp"
                app:cardBackgroundColor="@color/secondaryText"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/colorImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="9dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/bold_s"
                android:text="새 할일"/>

            <TextView
                android:id="@+id/tagText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:textSize="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/semiPrimaryText"
                android:fontFamily="@font/regular_s"
                android:text="#"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginRight="-3dp"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right">

                    <ImageView
                        android:id="@+id/alarmImg"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/alarm"
                        android:tint="@color/semiPrimaryText" />

                    <ImageView
                        android:id="@+id/checkImg"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/check"
                        android:tint="@color/semiPrimaryText"/>

                    <ImageView
                        android:id="@+id/timeImg"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/time"
                        android:tint="@color/semiPrimaryText"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>