<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topShadow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        android:background="@drawable/line_top_shadow"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="50dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/display_settings"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="18dp"/>

            </FrameLayout>

            <com.ayaan.twelvepages.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:colorFlag="primary"/>

            <FrameLayout
                android:id="@+id/calendarSettingBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/calendar_settings"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/arrow_right"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/task_setting"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="16dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/check_option"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/alarm"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="18dp"/>

            </FrameLayout>

            <com.ayaan.twelvepages.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:colorFlag="primary"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/default_alarm_time"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="16dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/morningAlarmTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/morningAlarmTime"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/morningAlarmTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/afternoonAlarmTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/afternoonAlarmTime"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/afternoonAlarmTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/eveningAlarmTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/eveningAlarmTime"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/eveningAlarmTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/nightAlarmTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nightAlarmTime"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/nightAlarmTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/device_calendar"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="18dp"/>

            </FrameLayout>

            <com.ayaan.twelvepages.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:colorFlag="primary"/>

            <FrameLayout
                android:id="@+id/osCalendarBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/connect_os_calendar"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/osCalendarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/osCalendarStyleBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/os_calendar_style"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/osCalendarStyleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/check_option_3"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/advanced_setting"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="18dp"/>

            </FrameLayout>

            <com.ayaan.twelvepages.ui.view.base.Line
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:colorFlag="primary"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/export"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/account_settings"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="18dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/bold"
                    android:textSize="16dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="@color/primaryText"
                    android:textSize="14dp"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/headerLy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/whiteAlpha">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:background="?android:attr/selectableItemBackground"
                android:tint="@color/primaryText"
                android:padding="7dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:fontFamily="@font/bold"
                android:textSize="32dp"
                android:text="@string/setting"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>