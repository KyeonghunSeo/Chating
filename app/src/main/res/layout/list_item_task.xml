<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

   <LinearLayout
       android:id="@+id/backLy"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </LinearLayout>

   <FrameLayout
       android:id="@+id/frontLy"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/background">

      <FrameLayout
          android:id="@+id/checkArea"
          android:layout_width="48dp"
          android:layout_height="38dp">

         <ImageView
             android:id="@+id/checkBox"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:layout_marginLeft="21dp"
             android:layout_gravity="center_vertical"
             android:tint="@color/primaryText"
             android:src="@drawable/sharp_check_box_black_48dp"/>

      </FrameLayout>

      <LinearLayout
          android:id="@+id/contentLy"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="9dp"
          android:layout_marginBottom="9dp"
          android:layout_marginLeft="48dp"
          android:layout_marginRight="120dp">

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical">

            <TextView
                android:id="@+id/tagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/primaryText"
                android:text="#love#peace"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/primaryText"
                android:text="title"/>

         </LinearLayout>

         <include layout="@layout/view_timeobject_sub_contents" />

      </LinearLayout>

   </FrameLayout>

</FrameLayout>