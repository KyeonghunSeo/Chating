<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/contentLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        android:animateLayoutChanges="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/decoListView"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </androidx.recyclerview.widget.RecyclerView>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:descendantFocusability="blocksDescendants">

            <LinearLayout
                android:id="@+id/emptyLy"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_margin="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/disableText"
                    android:textSize="18dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/bold"
                    android:textStyle="italic"
                    android:text="@string/no_records"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/disableText"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="italic"
                    android:text="@string/motto_sample"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recordListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:id="@+id/topShadow"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/line_top_shadow"/>

        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/view_selected_date_header" />

    <ImageView
        android:id="@+id/previewDataImg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:translationX="-3dp"
        android:scaleType="fitXY"
        android:tint="@color/disableText"
        android:src="@drawable/align_left"/>

</FrameLayout>