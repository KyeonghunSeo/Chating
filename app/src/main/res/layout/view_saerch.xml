<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/backgroundLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim"
        android:visibility="invisible">
    </View>

    <LinearLayout
        android:id="@+id/contentLy"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:background="@color/background">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/primaryText"
                android:src="@drawable/search"
                android:padding="15dp"/>

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/search_title_location_memo"
                android:background="@drawable/blank"
                android:textColorHint="@color/disableText"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/clearBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/primaryText"
                android:src="@drawable/close"
                android:padding="15dp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/tagBtn"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/edit_tag_new"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.4"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/tagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:text="@string/select_tag"
                    android:textColor="@color/primaryText"/>

            </LinearLayout>

            <com.ayaan.twelvepages.ui.view.TagView
                android:id="@+id/tagView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.ayaan.twelvepages.ui.view.TagView>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>